@page "/"
@inherits IndexBase
<PageTitle>Index</PageTitle>


<h1 class='elegantshadow'>Otto Rentals</h1>


<head>
<title>image rotator</title>
<style>
        .ot-text-warning {
            color: #cb233b !important;
            
        }
</style>
</head>

<body>


    <div class="container">

        <!-- Full-width images with number text -->
        <div class="mySlides">
            <div class="numbertext">1 / 6</div>
            <img src="images/kitchen1.jpg" style="width:100%">
        </div>

        <div class="mySlides">
            <div class="numbertext">2 / 6</div>
            <img src="images/BristolBack.jpg" style="width:100%">
        </div>

        <div class="mySlides">
            <div class="numbertext">3 / 6</div>
            <img src="images/BristolBath.jpg" style="width:100%">
        </div>

        <div class="mySlides">
            <div class="numbertext">4 / 6</div>
            <img src="images/BristolBed.jpg" style="width:100%">
        </div>

        <div class="mySlides">
            <div class="numbertext">5 / 6</div>
            <img src="images/BristolBed2.jpg" style="width:100%">
        </div>

        <div class="mySlides">
            <div class="numbertext">6 / 6</div>
            <img src="images/BristolHall.jpg" style="width:100%">
        </div>

        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>

        <!-- Image text -->
        <div class="caption-container">
            <p id="caption"></p>
        </div>

        <!-- Thumbnail images -->
        <div class="row">
            <div class="column">
                <img class="demo cursor" src="images/kitchen1.jpg" style="width:100%" onclick="currentSlide(1)" alt="The Kitchen">
            </div>
            <div class="column">
                <img class="demo cursor" src="images/BristolBack.jpg" style="width:100%" onclick="currentSlide(2)" alt="Back of the House">
            </div>
            <div class="column">
                <img class="demo cursor" src="images/BristolBath.jpg" style="width:100%" onclick="currentSlide(3)" alt="Bathroom">
            </div>
            <div class="column">
                <img class="demo cursor" src="images/BristolBed.jpg" style="width:100%" onclick="currentSlide(4)" alt="Master Bedroom">
            </div>
            <div class="column">
                <img class="demo cursor" src="images/BristolBed2.jpg" style="width:100%" onclick="currentSlide(5)" alt="Guest Bedroom">
            </div>
            <div class="column">
                <img class="demo cursor" src="images/BristolHall.jpg" style="width:100%" onclick="currentSlide(6)" alt="Hallway">
            </div>
        </div>
    </div>
</body>